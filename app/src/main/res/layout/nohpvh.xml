<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView app:cardCornerRadius="10dp"
        android:elevation="5dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout

            android:background="#F3F1EF"
            android:padding="15dp"
            android:weightSum="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_weight="0.1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_phone_focused"
                />

            <TextView

                android:id="@+id/nohp"
                android:layout_weight="0.6"
                android:textSize="18sp"
                android:text="082117758335"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="match_parent"/>
          <EditText
              android:backgroundTint="@color/primary"
              android:inputType="number"
              android:gravity="center"
              android:textCursorDrawable="@null"
              android:visibility="gone"
              android:id="@+id/nohp_edit"
              android:layout_weight="0.6"
              android:layout_width="0dp"
              android:layout_height="match_parent"
              android:fontFamily="@font/centurygothic"

              />




            <LinearLayout
                android:id="@+id/editt"
                android:background="?attr/selectableItemBackground"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="0.15"
                android:layout_width="0dp"
                android:layout_height="40dp">

            <ImageView
                android:src="@drawable/ic_baseline_edit_24"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="edit"
                    />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/editSubmit"
                android:visibility="gone"
                android:background="?attr/selectableItemBackground"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="0.15"
                android:layout_width="0dp"
                android:layout_height="40dp">

                <ImageView
                    android:src="@drawable/ic_baseline_done_24"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="submit"
                    />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/editCancel"
                android:visibility="gone"
                android:background="?attr/selectableItemBackground"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="0.15"
                android:layout_width="0dp"
                android:layout_height="40dp">

                <ImageView
                    android:src="@drawable/ic_baseline_do_disturb_24"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="cancel"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/hapuss"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="0.15"
                android:background="?attr/selectableItemBackground"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_delete_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="hapus"
                    android:textSize="15sp" />

            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>