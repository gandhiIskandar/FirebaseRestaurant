<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout

        android:padding="15dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="@drawable/space_5dp"
                android:orientation="vertical"

                android:showDividers="middle"
                tools:context="fragment.AlamatFragment">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="label alamat"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <com.google.android.material.textfield.TextInputLayout

                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"

                    android:textColor="@color/black"
                    app:hintEnabled="false"
                    app:startIconDrawable="@drawable/ic_baseline_bookmark_24"

                    app:startIconTint="@color/focuss">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/labelalamat"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/centurygothic"
                        android:hint="contoh: kantor saya, rumah doi"
                        android:inputType="textPersonName"

                        />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="keterangan"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <com.google.android.material.textfield.TextInputLayout

                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"

                    android:textColor="@color/black"
                    app:hintEnabled="false"
                    app:startIconDrawable="@drawable/ic_baseline_info_24"

                    app:startIconTint="@color/focuss">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/keteranganalamat"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/centurygothic"
                        android:hint="contoh: dekat pendopo, sebelah toko A"
                        android:inputType="textPersonName"

                        />

                </com.google.android.material.textfield.TextInputLayout>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="alamat"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <com.google.android.material.textfield.TextInputLayout

                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"

                    android:textColor="@color/black"
                    app:hintEnabled="false"
                    app:startIconDrawable="@drawable/ic_baseline_location_on_24"

                    app:startIconTint="@color/focuss">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/alamatlengkap"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/centurygothic"
                        android:hint="contoh: Jalan mawar 1 no.41"
                        android:inputType="textMultiLine"


                        />

                </com.google.android.material.textfield.TextInputLayout>


            </LinearLayout>




        <fragment


            android:id="@+id/map_fragment"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            />





    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:enabled="false"
        android:id="@+id/tambahalamat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="tambah alamat"
        android:textAllCaps="false"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

</layout>